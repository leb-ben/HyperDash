{
  "name": "trade-bot",
  "version": "0.1.0",
  "description": "AI-powered crypto trading bot with Hyperliquid integration",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "node --loader ts-node/esm src/index.ts",
    "build": "node node_modules/typescript/bin/tsc",
    "start": "node dist/index.js",
    "start:bot": "npm run build && npm run start",
    "start:dashboard": "cd dashboard && npm run dev",
    "paper": "PAPER_TRADING=true npm run dev",
    "live": "PAPER_TRADING=false npm run dev",
    "check": "node node_modules/typescript/bin/tsc --noEmit",
    "test": "node --test"
  },
  "dependencies": {
    "better-sqlite3": "^11.6.0",
    "chalk": "^5.3.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "ethers": "^6.13.4",
    "hyperliquid": "^1.5.1",
    "openai": "^4.73.1",
    "technicalindicators": "^3.1.0",
    "ts-node": "^10.9.2",
    "winston": "^3.17.0",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.0",
    "bun-types": "^1.1.37",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
