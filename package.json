{
  "name": "trade-bot",
  "version": "0.1.0",
  "description": "AI-powered crypto trading bot with Hyperliquid integration",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "dashboard": "cd dashboard && npm run dev",
    "validate": "node scripts/deployment-validator.js",
    "deploy": "npm run validate && npm run build && npm start",
    "paper": "PAPER_TRADING=true npm run dev",
    "live": "PAPER_TRADING=false npm run dev",
    "check": "node node_modules/typescript/bin/tsc --noEmit"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.13",
    "@types/ws": "^8.18.1",
    "better-sqlite3": "^11.6.0",
    "chalk": "^5.3.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "ethers": "^6.13.4",
    "https-proxy-agent": "^7.0.6",
    "hyperliquid": "^1.5.1",
    "js-yaml": "^4.1.1",
    "node-fetch": "^3.3.2",
    "openai": "^4.73.1",
    "technicalindicators": "^3.1.0",
    "ts-node": "^10.9.2",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.0",
    "bun-types": "^1.1.37",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
